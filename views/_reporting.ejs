<label>Select Report</label><br>
<form action="/reports" method="POST">
    <select autofocus name="reports" id="reports">
        <option value= "1" selected>All Customers- Sorted by Customer Last Name, First Name</option>
        <option value= "2" selected>All Customers- Sorted by Current Total Sales Decreasing</option>
        <option value= "3" selected>Three Random Customers - Promotional Giveaway (Not Repeating)</option>
    </select>
    <br>
    <form>
        <input class="btn btn-info" type="submit" value="Run Report" id="reports">
    </form>
</form>

<% if (type === "POST") { %>

<% if (value = 1) { %>
<table>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>State</th>
                <th>Sales YTD</th>
                <th>Prev Years Sales</th>
            </tr>
        </thead>
        <tbody>
            <% cusReport.forEach(customers => { %>
            <tr>
                <td><%= customers.cusid %></td>
                <td><%= customers.cusfname %></td>
                <td><%= customers.cuslname %></td>
                <td><%= customers.cusstate %></td>
                <td><%= customers.cussalesytd %></td>
                <td><%= customers.cussalesprev %></td>
            </tr>
            <% }); %>
        </tbody>


        <% } else if (value = 2) { %>
        <table>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>State</th>
                        <th>Sales YTD</th>
                        <th>Prev Years Sales</th>
                    </tr>
                </thead>
                <tbody>
                    <% cusSales.forEach(customers => { %>
                    <tr>
                        <td><%= customers.cusid %></td>
                        <td><%= customers.cusfname %></td>
                        <td><%= customers.cuslname %></td>
                        <td><%= customers.cusstate %></td>
                        <td><%= customers.cussalesytd %></td>
                        <td><%= customers.cussalesprev %></td>
                    </tr>
                    <% }); %>
                </tbody>

            </table>
            <% } else { %>
            <table>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>State</th>
                            <th>Sales YTD</th>
                            <th>Prev Years Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cusRandom.forEach(customers => { %>
                        <tr>
                            <td><%= customers.cusid %></td>
                            <td><%= customers.cusfname %></td>
                            <td><%= customers.cuslname %></td>
                            <td><%= customers.cusstate %></td>
                            <td><%= customers.cussalesytd %></td>
                            <td><%= customers.cussalesprev %></td>
                        </tr>
                        <% }); %>
                    </tbody>

                </table>
                <% } %>
                <% } %>




           